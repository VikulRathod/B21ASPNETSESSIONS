@using _2_ViewsDemo.Custom

@{
    ViewBag.Title = "Index";
}

<h2>Index 1 View Content</h2>
@Html.ActionLink("Open Index 2", "Index2")

<table>
    <tr>
        <td>
            <label>Name</label>
            @Html.Label("Name")
        </td>
        <td>
            <input type="text" />
            @Html.TextBox("txtName")
        </td>
    </tr>
    <tr>
        <td>
            <label>Password</label>
            @Html.Label("Password")
        </td>
        <td>
            <input type="password" />
            @Html.Password("txtPassword")
        </td>
    </tr>
    <tr>
        <td>
            @Html.Label("Gender")
        </td>
        <td>
            @Html.RadioButton("Gender", false) Male
            @Html.RadioButton("Gender", false) Female
        </td>
    </tr>
    <tr>
        <td>
            <input type="button" value="Log In" /> |
            @Html.Button("button", "Sign Up") |
            @Html.Button("submit", "Clear")
        </td>
    </tr>
    <tr>
        <td>
            <img src="~/images/3.jpg" width="100" height="100"/> |
            @Html.Image("images/3.jpg", "Profile Pic", "100", "100")
        </td>
    </tr>
    <tr>
        <td>
            <a href="http://www.google.com" target="_blank">forgot password?</a>
            @Html.ActionLink("Visit Index 2", "Index2",null, new { style = "color:red"})
        </td>
    </tr>
</table>
<hr />

